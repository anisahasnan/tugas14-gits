<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slider_image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="30dp"
        android:padding="20dp"
        app:srcCompat="@drawable/onboard1" />

    <TextView
        android:id="@+id/slider_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Temukan Kontak\nRekanmu"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_below="@+id/slider_image"/>

    <TextView
        android:id="@+id/slider_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Kamu dapat menemukan kontak rekan kerja mu disini,mulai dari nomor telepon, email, hingga alamat"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_below="@+id/slider_heading" />

</RelativeLayout>